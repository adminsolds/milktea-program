<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>奶茶店后台管理系统 - 登录</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #ff9a9e 0%, #fad0c4 99%, #fad0c4 100%);
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        }

        .login-wrapper {
            width: 100%;
            max-width: 420px;
            padding: 20px;
        }

        .login-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 24px;
            padding: 48px;
            box-shadow: 0 24px 64px rgba(255, 154, 158, 0.25);
            border: 1px solid rgba(255, 255, 255, 0.18);
        }

        .login-header {
            text-align: center;
            margin-bottom: 40px;
        }

        .login-icon {
            width: 90px;
            height: 90px;
            background: linear-gradient(135deg, #ff9a9e 0%, #fad0c4 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 24px;
            box-shadow: 0 12px 36px rgba(255, 154, 158, 0.4);
            transition: all 0.3s ease;
        }

        .login-icon:hover {
            transform: scale(1.05);
            box-shadow: 0 16px 48px rgba(255, 154, 158, 0.5);
        }

        .login-icon i {
            font-size: 40px;
            color: white;
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0% {
                transform: scale(1);
            }
            50% {
                transform: scale(1.1);
            }
            100% {
                transform: scale(1);
            }
        }

        .login-header h1 {
            font-size: 28px;
            font-weight: 700;
            color: #333;
            margin-bottom: 12px;
            background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .login-header p {
            font-size: 15px;
            color: #666;
            line-height: 1.4;
        }

        .form-group {
            margin-bottom: 28px;
            position: relative;
        }

        .form-label {
            font-size: 14px;
            font-weight: 600;
            color: #333;
            margin-bottom: 10px;
            display: block;
            transition: all 0.3s ease;
        }

        .input-group {
            position: relative;
        }

        .input-icon {
            position: absolute;
            left: 20px;
            top: 50%;
            transform: translateY(-50%);
            color: #ff9a9e;
            font-size: 20px;
            z-index: 10;
            transition: all 0.3s ease;
        }

        .form-control {
            width: 100%;
            padding: 16px 20px 16px 56px;
            border: 2px solid #f0f0f0;
            border-radius: 16px;
            font-size: 16px;
            transition: all 0.3s ease;
            background-color: #fafafa;
            font-weight: 500;
        }

        .form-control:focus {
            outline: none;
            border-color: #ff9a9e;
            background-color: #fff;
            box-shadow: 0 0 0 4px rgba(255, 154, 158, 0.15);
            transform: translateY(-2px);
        }

        .form-control:focus + .input-icon {
            color: #ff6b6b;
            transform: translateY(-50%) scale(1.1);
        }

        .form-control:focus ~ .form-label {
            color: #ff6b6b;
        }

        .form-control::placeholder {
            color: #ccc;
            font-weight: 400;
        }

        .form-control.error {
            border-color: #ff6b6b;
            animation: shake 0.5s ease;
        }

        @keyframes shake {
            0%, 100% {
                transform: translateX(0);
            }
            25% {
                transform: translateX(-5px);
            }
            75% {
                transform: translateX(5px);
            }
        }

        .error-message {
            color: #ff6b6b;
            font-size: 12px;
            margin-top: 6px;
            display: none;
            animation: fadeIn 0.3s ease;
        }

        .btn-login {
            width: 100%;
            padding: 16px;
            background: linear-gradient(135deg, #ff9a9e 0%, #fad0c4 100%);
            border: none;
            border-radius: 16px;
            color: white;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 6px 20px rgba(255, 154, 158, 0.4);
            position: relative;
            overflow: hidden;
        }

        .btn-login::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
            transition: left 0.6s ease;
        }

        .btn-login:hover::before {
            left: 100%;
        }

        .btn-login:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(255, 154, 158, 0.5);
            background: linear-gradient(135deg, #ff8a8a 0%, #f8c0b9 100%);
        }

        .btn-login:active {
            transform: translateY(0);
        }

        .btn-login:disabled {
            opacity: 0.7;
            cursor: not-allowed;
            transform: none;
        }

        .login-footer {
            text-align: center;
            margin-top: 32px;
            padding-top: 28px;
            border-top: 1px solid #f0f0f0;
        }

        .login-footer p {
            font-size: 13px;
            color: #999;
            margin: 0;
        }

        .login-footer p:hover {
            color: #ff9a9e;
            transition: color 0.3s ease;
        }

        /* 加载动画 */
        .spinner {
            display: inline-block;
            width: 20px;
            height: 20px;
            border: 2px solid rgba(255, 255, 255, 0.3);
            border-radius: 50%;
            border-top-color: #fff;
            animation: spin 1s ease-in-out infinite;
        }

        @keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        /* 响应式设计 */
        @media (max-width: 480px) {
            .login-wrapper {
                padding: 15px;
            }

            .login-container {
                padding: 36px 28px;
                border-radius: 20px;
            }

            .login-header h1 {
                font-size: 24px;
            }

            .login-icon {
                width: 80px;
                height: 80px;
            }

            .login-icon i {
                font-size: 34px;
            }

            .form-control {
                padding: 14px 18px 14px 52px;
                font-size: 15px;
            }

            .btn-login {
                padding: 14px;
            }
        }

        /* 动画效果 */
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .login-container {
            animation: fadeIn 0.8s ease;
        }

        .login-header {
            animation: fadeIn 0.8s ease 0.2s both;
        }

        .form-group {
            animation: fadeIn 0.8s ease 0.4s both;
        }

        .btn-login {
            animation: fadeIn 0.8s ease 0.6s both;
        }

        .login-footer {
            animation: fadeIn 0.8s ease 0.8s both;
        }
    </style>
</head>
<body>
    <div class="login-wrapper">
        <div class="login-container">
            <div class="login-header">
                <div class="login-icon">
                    <i class="bi bi-cup-hot-fill"></i>
                </div>
                <h1>奶茶店管理系统</h1>
                <p>欢迎回来，请登录您的账号</p>
            </div>

            <form id="loginForm">
                <div class="form-group">
                    <label for="username" class="form-label">用户名</label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="username" name="username" placeholder="请输入用户名" required>
                        <i class="bi bi-person input-icon"></i>
                    </div>
                    <div class="error-message" id="usernameError">请输入用户名</div>
                </div>

                <div class="form-group">
                    <label for="password" class="form-label">密码</label>
                    <div class="input-group">
                        <input type="password" class="form-control" id="password" name="password" placeholder="请输入密码" required>
                        <i class="bi bi-lock input-icon"></i>
                    </div>
                    <div class="error-message" id="passwordError">请输入密码</div>
                </div>

                <button type="submit" class="btn-login">
                    <i class="bi bi-box-arrow-in-right me-2"></i>登录
                </button>
            </form>

            <div class="login-footer">
                <p>© 2024 奶茶店管理系统 · 版权所有</p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const loginForm = document.getElementById('loginForm');
            const usernameInput = document.getElementById('username');
            const passwordInput = document.getElementById('password');
            const usernameError = document.getElementById('usernameError');
            const passwordError = document.getElementById('passwordError');

            // 实时验证
            usernameInput.addEventListener('input', function() {
                validateField(this, usernameError);
            });

            passwordInput.addEventListener('input', function() {
                validateField(this, passwordError);
            });

            // 失去焦点验证
            usernameInput.addEventListener('blur', function() {
                validateField(this, usernameError);
            });

            passwordInput.addEventListener('blur', function() {
                validateField(this, passwordError);
            });

            // 验证函数
            function validateField(input, errorElement) {
                if (input.value.trim() === '') {
                    input.classList.add('error');
                    errorElement.style.display = 'block';
                    return false;
                } else {
                    input.classList.remove('error');
                    errorElement.style.display = 'none';
                    return true;
                }
            }

            // 表单提交
            loginForm.addEventListener('submit', function(e) {
                e.preventDefault();

                // 验证所有字段
                const isUsernameValid = validateField(usernameInput, usernameError);
                const isPasswordValid = validateField(passwordInput, passwordError);

                if (!isUsernameValid || !isPasswordValid) {
                    return;
                }

                // 获取表单数据
                const username = usernameInput.value;
                const password = passwordInput.value;

                // 显示加载状态
                const submitBtn = this.querySelector('button[type="submit"]');
                const originalText = submitBtn.innerHTML;
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<span class="spinner mr-2"></span>登录中...';

                // 发送登录请求
                fetch('/api/admin/login', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ username, password })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.status === 'success') {
                        // 登录成功，存储token
                        localStorage.setItem('adminToken', data.data.token);
                        // 跳转到后台首页
                        window.location.href = '/admin/dashboard';
                    } else {
                        // 登录失败，显示错误信息
                        showErrorAlert(data.message || '登录失败');
                    }
                })
                .catch(error => {
                    console.error('登录请求失败:', error);
                    showErrorAlert('网络错误，请稍后重试');
                })
                .finally(() => {
                    // 恢复按钮状态
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = originalText;
                });
            });

            // 显示错误提示
            function showErrorAlert(message) {
                // 创建错误提示元素
                const alert = document.createElement('div');
                alert.className = 'error-alert';
                alert.style.cssText = `
                    position: fixed;
                    top: 20px;
                    right: 20px;
                    background: #ff6b6b;
                    color: white;
                    padding: 16px 20px;
                    border-radius: 12px;
                    box-shadow: 0 8px 32px rgba(255, 107, 107, 0.4);
                    z-index: 1000;
                    animation: slideIn 0.5s ease;
                    font-weight: 500;
                `;
                alert.innerHTML = `
                    <i class="bi bi-exclamation-circle mr-2"></i>
                    ${message}
                `;

                // 添加动画
                const style = document.createElement('style');
                style.textContent = `
                    @keyframes slideIn {
                        from {
                            transform: translateX(100%);
                            opacity: 0;
                        }
                        to {
                            transform: translateX(0);
                            opacity: 1;
                        }
                    }
                `;
                document.head.appendChild(style);

                // 添加到页面
                document.body.appendChild(alert);

                // 3秒后移除
                setTimeout(() => {
                    alert.style.animation = 'slideIn 0.5s ease reverse';
                    setTimeout(() => {
                        document.body.removeChild(alert);
                        document.head.removeChild(style);
                    }, 500);
                }, 3000);
            }
        });
    </script>
</body>
</html>
