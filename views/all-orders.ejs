    <script>
        let currentPage = 1;
        let totalPages = 1;
        let currentQuickDate = 'today';

        // 页面加载完成后初始化
        document.addEventListener('DOMContentLoaded', function() {
            // 设置默认日期范围为今天
            const today = new Date();
            document.getElementById('startDate').value = formatDateForInput(today);
            document.getElementById('endDate').value = formatDateForInput(today);

            // 加载统计数据
            loadStats();

            // 加载订单列表
            loadOrders();
        });

        // 格式化日期为 input type="date" 格式
        function formatDateForInput(date) {
            const year = date.getFullYear();
            const month = String(date.getMonth() + 1).padStart(2, '0');
            const day = String(date.getDate()).padStart(2, '0');
            return `${year}-${month}-${day}`;
        }

        // 快捷日期选择
        function selectQuickDate(period) {
            currentQuickDate = period;
            const today = new Date();
            let startDate, endDate = today;

            switch (period) {
                case 'today':
                    startDate = today;
                    break;
                case 'week':
                    startDate = new Date(today);
                    startDate.setDate(today.getDate() - today.getDay()); // 本周一
                    break;
                case 'month':
                    startDate = new Date(today.getFullYear(), today.getMonth(), 1); // 本月1号
                    break;
                case 'all':
                    startDate = null;
                    endDate = null;
                    break;
            }

            // 更新输入框
            if (startDate) {
                document.getElementById('startDate').value = formatDateForInput(startDate);
            } else {
                document.getElementById('startDate').value = '';
            }
            if (endDate) {
                document.getElementById('endDate').value = formatDateForInput(endDate);
            } else {
                document.getElementById('endDate').value = '';
            }

            // 更新按钮状态
            document.querySelectorAll('.quick-date-buttons .btn').forEach(btn => {
                btn.classList.remove('active');
                if (btn.dataset.period === period) {
                    btn.classList.add('active');
                }
            });

            // 重新加载订单
            loadOrders();
        }

        // 加载统计数据
        async function loadStats() {
            try {
                const today = new Date();
                const monthStart = new Date(today.getFullYear(), today.getMonth(), 1);

                // 获取今日统计
                const todayRes = await fetch(`/api/orders/stats?startDate=${formatDateForInput(today)}&endDate=${formatDateForInput(today)}`);
                const todayData = await todayRes.json();

                // 获取本月统计
                const monthRes = await fetch(`/api/orders/stats?startDate=${formatDateForInput(monthStart)}&endDate=${formatDateForInput(today)}`);
                const monthData = await monthRes.json();

                document.getElementById('todayCount').textContent = todayData.count || 0;
                document.getElementById('todayAmount').textContent = '¥' + (todayData.amount || 0);
                document.getElementById('monthCount').textContent = monthData.count || 0;
                document.getElementById('monthAmount').textContent = '¥' + (monthData.amount || 0);
            } catch (error) {
                console.error('加载统计数据失败:', error);
            }
        }

        // 加载订单列表
        async function loadOrders(page = 1) {
            try {
                const startDate = document.getElementById('startDate').value;
                const endDate = document.getElementById('endDate').value;
                const source = document.getElementById('sourceFilter').value;
                const status = document.getElementById('statusFilter').value;

                let url = `/api/orders?page=${page}&limit=20`;
                if (startDate) url += `&startDate=${startDate}`;
                if (endDate) url += `&endDate=${endDate}`;
                if (source) url += `&source=${source}`;
                if (status !== '') url += `&status=${status}`;

                const response = await fetch(url);
                const data = await response.json();

                if (data.orders) {
                    renderOrders(data.orders);
                    currentPage = data.page;
                    totalPages = Math.ceil(data.total / data.limit);
                    document.getElementById('totalOrders').textContent = data.total;
                    renderPagination();
                }
            } catch (error) {
                console.error('加载订单列表失败:', error);
            }
        }

        // 渲染订单列表
        function renderOrders(orders) {
            const tbody = document.getElementById('ordersTableBody');
            tbody.innerHTML = '';

            if (orders.length === 0) {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="7" class="text-center">
                            <div class="empty-state">
                                <i class="bi bi-inbox"></i>
                                <h5>暂无订单</h5>
                                <p>当前没有符合条件的订单</p>
                            </div>
                        </td>
                    </tr>
                `;
                return;
            }

            orders.forEach(order => {
                const tr = document.createElement('tr');
                tr.innerHTML = `
                    <td>
                        <strong>${order.order_no}</strong>
                    </td>
                    <td>
                        ${getSourceBadge(order)}
                    </td>
                    <td>
                        <div>${order.user?.nickname || '匿名用户'}</div>
                        ${order.phone ? `<small class="text-muted">${order.phone}</small>` : ''}
                    </td>
                    <td>
                        <strong class="text-danger">¥${order.final_price}</strong>
                    </td>
                    <td>
                        <span class="status-badge status-${order.status}">${getStatusText(order.status)}</span>
                    </td>
                    <td>
                        <small>${new Date(order.createdAt || order.created_at).toLocaleString()}</small>
                    </td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary" onclick="viewOrderDetail(${order.id})">
                            <i class="bi bi-eye"></i> 查看
                        </button>
                    </td>
                `;
                tbody.appendChild(tr);
            });
        }

        // 获取订单来源标签
        function getSourceBadge(order) {
            if (order.is_pos) {
                return '<span class="source-badge pos"><i class="bi bi-shop"></i> 现场点单</span>';
            } else if (order.source === 'delivery_platform') {
                return '<span class="source-badge delivery"><i class="bi bi-truck"></i> 外卖平台</span>';
            } else {
                return '<span class="source-badge miniapp"><i class="bi bi-phone"></i> 小程序</span>';
            }
        }

        // 获取状态文本
        function getStatusText(status) {
            const statusMap = {
                0: '已取消',
                1: '已下单',
                2: '制作中',
                3: '制作完成',
                4: '配送中/待取餐',
                5: '已完成',
                6: '已送达'
            };
            return statusMap[status] || '未知';
        }

        // 渲染分页
        function renderPagination() {
            const pagination = document.getElementById('pagination');
            pagination.innerHTML = '';

            // 上一页
            const prevLi = document.createElement('li');
            prevLi.className = `page-item ${currentPage === 1 ? 'disabled' : ''}`;
            prevLi.innerHTML = `<a class="page-link" href="#" onclick="loadOrders(${currentPage - 1})">&laquo;</a>`;
            pagination.appendChild(prevLi);

            // 页码
            for (let i = 1; i <= totalPages; i++) {
                const li = document.createElement('li');
                li.className = `page-item ${i === currentPage ? 'active' : ''}`;
                li.innerHTML = `<a class="page-link" href="#" onclick="loadOrders(${i})">${i}</a>`;
                pagination.appendChild(li);
            }

            // 下一页
            const nextLi = document.createElement('li');
            nextLi.className = `page-item ${currentPage === totalPages ? 'disabled' : ''}`;
            nextLi.innerHTML = `<a class="page-link" href="#" onclick="loadOrders(${currentPage + 1})">&raquo;</a>`;
            pagination.appendChild(nextLi);
        }

        // 查看订单详情
        async function viewOrderDetail(orderId) {
            try {
                const response = await fetch(`/api/orders/${orderId}`);
                const order = await response.json();

                if (order) {
                    const modalContent = document.getElementById('orderDetailContent');
                    const statusClass = `status-${order.status}`;

                    // 渲染订单商品
                    const itemsHtml = order.items && order.items.length > 0 ? order.items.map(item => {
                        const spec = item.spec || '常规';
                        const sugar = item.sugar || '正常糖';
                        const ice = item.ice || '正常冰';
                        let toppings = '';
                        if (item.toppings) {
                            try {
                                const toppingsArray = JSON.parse(item.toppings);
                                if (toppingsArray && toppingsArray.length > 0) {
                                    toppings = toppingsArray.join(', ');
                                }
                            } catch (e) {
                                toppings = item.toppings;
                            }
                        }

                        return `
                            <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded mb-2">
                                <div>
                                    <strong>${item.product_name}</strong>
                                    <div class="text-muted small">${spec} | ${sugar} | ${ice}${toppings ? ' | ' + toppings : ''}</div>
                                </div>
                                <div class="text-end">
                                    <div>x${item.quantity}</div>
                                    <div class="text-danger fw-bold">¥${item.price}</div>
                                </div>
                            </div>
                        `;
                    }).join('') : '<p class="text-muted">暂无商品信息</p>';

                    modalContent.innerHTML = `
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <h6 class="fw-bold">订单信息</h6>
                                <table class="table table-sm">
                                    <tr><td class="text-muted">订单号:</td><td>${order.order_no}</td></tr>
                                    <tr><td class="text-muted">状态:</td><td><span class="status-badge ${statusClass}">${getStatusText(order.status)}</span></td></tr>
                                    <tr><td class="text-muted">来源:</td><td>${getSourceBadge(order)}</td></tr>
                                    <tr><td class="text-muted">用户:</td><td>${order.user?.nickname || '匿名用户'}</td></tr>
                                    <tr><td class="text-muted">手机号:</td><td>${order.phone || '未提供'}</td></tr>
                                    <tr><td class="text-muted">创建时间:</td><td>${new Date(order.createdAt || order.created_at).toLocaleString()}</td></tr>
                                </table>
                            </div>
                            <div class="col-md-6">
                                <h6 class="fw-bold">金额明细</h6>
                                <table class="table table-sm">
                                    <tr><td class="text-muted">商品总价:</td><td>¥${order.product_total}</td></tr>
                                    <tr><td class="text-muted">配送费:</td><td>¥${order.delivery_fee}</td></tr>
                                    ${order.discount > 0 ? `<tr><td class="text-muted text-danger">优惠券折扣:</td><td class="text-danger">-¥${order.discount}</td></tr>` : ''}
                                    ${order.member_discount > 0 ? `<tr><td class="text-muted text-danger">会员折扣:</td><td class="text-danger">-¥${order.member_discount}</td></tr>` : ''}
                                    <tr><td class="fw-bold">实付金额:</td><td class="fw-bold text-danger fs-5">¥${order.final_price}</td></tr>
                                </table>
                            </div>
                        </div>
                        <h6 class="fw-bold">订单商品</h6>
                        ${itemsHtml}
                        ${order.remark ? `<div class="mt-3 p-3 bg-warning bg-opacity-10 rounded"><strong class="text-warning">备注:</strong> ${order.remark}</div>` : ''}
                    `;

                    const modal = new bootstrap.Modal(document.getElementById('orderDetailModal'));
                    modal.show();
                }
            } catch (error) {
                console.error('获取订单详情失败:', error);
            }
        }
    </script>
