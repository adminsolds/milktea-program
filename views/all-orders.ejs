    <link rel="stylesheet" href="/styles/admin-modern.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            background-color: #f8f9fa;
        }
        .sidebar {
            min-height: 100vh;
            background-color: #343a40;
            color: white;
        }
        .sidebar a {
            color: white;
            text-decoration: none;
        }
        .sidebar a:hover {
            background-color: #495057;
        }
        .content {
            padding: 20px;
        }

        /* 统计卡片 */
        .stat-card {
            background: white;
            border-radius: 16px;
            padding: 20px;
            display: flex;
            align-items: center;
            gap: 16px;
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
            transition: transform 0.3s, box-shadow 0.3s;
            border: 1px solid rgba(0, 0, 0, 0.05);
        }
        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
        }
        .stat-card .stat-icon {
            width: 56px;
            height: 56px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            flex-shrink: 0;
        }
        .stat-today .stat-icon {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }
        .stat-month .stat-icon {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
        }
        .stat-today-amount .stat-icon {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            color: white;
        }
        .stat-month-amount .stat-icon {
            background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
            color: white;
        }
        .stat-card .stat-content {
            flex: 1;
        }
        .stat-card .stat-value {
            font-size: 28px;
            font-weight: 700;
            color: #2c3e50;
            line-height: 1;
        }
        .stat-card .stat-label {
            font-size: 14px;
            color: #7f8c8d;
            margin-top: 4px;
        }

        /* 图表容器 */
        .chart-container {
            background: white;
            border-radius: 16px;
            padding: 20px;
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
            margin-bottom: 20px;
        }
        .chart-container h5 {
            color: #2c3e50;
            font-weight: 600;
            margin-bottom: 20px;
        }

        /* 筛选区域 */
        .filter-section {
            background: white;
            border-radius: 16px;
            padding: 20px;
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
            margin-bottom: 20px;
        }
        .quick-date-buttons .btn {
            border-radius: 8px;
            font-size: 13px;
            font-weight: 500;
            padding: 8px 16px;
        }
        .quick-date-buttons .btn.active {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-color: transparent;
        }

        /* 订单表格 */
        .orders-table-container {
            background: white;
            border-radius: 16px;
            padding: 20px;
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        }
        .orders-table {
            width: 100%;
        }
        .orders-table thead th {
            border: none;
            padding: 12px;
            font-weight: 600;
            color: #7f8c8d;
            font-size: 13px;
            text-transform: uppercase;
            background: #f8f9fa;
        }
        .orders-table tbody tr {
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
            transition: background 0.3s;
        }
        .orders-table tbody tr:hover {
            background: #f8f9fa;
        }
        .orders-table tbody td {
            padding: 16px 12px;
            vertical-align: middle;
        }

        /* 订单来源标签 */
        .source-badge {
            display: inline-flex;
            align-items: center;
            gap: 4px;
            padding: 4px 10px;
            border-radius: 10px;
            font-size: 11px;
            font-weight: 600;
        }
        .source-badge.miniapp {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }
        .source-badge.pos {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
        }
        .source-badge.delivery {
            background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
            color: white;
        }

        /* 状态标签 */
        .status-badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
        }
        .status-badge.status-0 { background: #e0e0e0; color: #666; }
        .status-badge.status-1 { background: #3498db; color: white; }
        .status-badge.status-2 { background: #9b59b6; color: white; }
        .status-badge.status-3 { background: #1abc9c; color: white; }
        .status-badge.status-4 { background: #2ecc71; color: white; }
        .status-badge.status-5 { background: #27ae60; color: white; }
        .status-badge.status-6 { background: #95a5a6; color: white; }

        /* 现代化表单控件 */
        .modern-select {
            border-radius: 8px;
            border: 1px solid rgba(0, 0, 0, 0.1);
            padding: 8px 12px;
            font-size: 14px;
            transition: all 0.3s;
        }
        .modern-select:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }
        .modern-input {
            border-radius: 8px;
            border: 1px solid rgba(0, 0, 0, 0.1);
            padding: 8px 12px;
            font-size: 14px;
        }
        .modern-input:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        /* 响应式 */
        @media (max-width: 768px) {
            .stat-card {
                padding: 16px;
            }
            .stat-card .stat-icon {
                width: 48px;
                height: 48px;
                font-size: 20px;
            }
            .stat-card .stat-value {
                font-size: 24px;
            }
        }

        /* 空状态 */
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #7f8c8d;
        }
        .empty-state i {
            font-size: 64px;
            color: #bdc3c7;
            margin-bottom: 16px;
            display: block;
        }
        .empty-state h5 {
            color: #95a5a6;
            margin-bottom: 8px;
        }
    </style>
</head>
