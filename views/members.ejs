        document.getElementById('colorPicker')?.addEventListener('input', function() {
            document.getElementById('levelColor').value = this.value;
        });

        document.getElementById('levelColor')?.addEventListener('input', function() {
            document.getElementById('colorPicker').value = this.value;
        });

        // ========== 新增会员功能 ==========

        // 打开新增会员模态框
        function openAddMemberModal() {
            // 重置表单
            document.getElementById('addMemberForm').reset();
            document.getElementById('addGrowthValue').value = 0;
            document.getElementById('addPoints').value = 0;
            document.getElementById('addBalance').value = 0;
            document.getElementById('addIsActive').value = '1';

            // 动态加载会员等级到下拉框
            const levelSelect = document.getElementById('addMemberLevel');
            levelSelect.innerHTML = '<option value="">普通会员</option>';
            memberLevels.forEach(level => {
                if (level.is_active) {
                    const option = document.createElement('option');
                    option.value = level.level_id;
                    option.textContent = level.name;
                    levelSelect.appendChild(option);
                }
            });

            // 显示模态框
            new bootstrap.Modal(document.getElementById('addMemberModal')).show();
        }

        // 保存新会员
        async function saveNewMember() {
            const form = document.getElementById('addMemberForm');
            if (!form.checkValidity()) {
                form.reportValidity();
                return;
            }

            const memberData = {
                nickname: document.getElementById('addNickname').value.trim(),
                phone: document.getElementById('addPhone').value.trim(),
                member_level: document.getElementById('addMemberLevel').value || null,
                growth_value: parseInt(document.getElementById('addGrowthValue').value) || 0,
                points: parseInt(document.getElementById('addPoints').value) || 0,
                balance: parseFloat(document.getElementById('addBalance').value) || 0,
                avatar: document.getElementById('addAvatar').value.trim(),
                is_active: parseInt(document.getElementById('addIsActive').value)
            };

            try {
                const response = await fetch('/api/members', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(memberData)
                });

                const data = await response.json();
                if (data.success) {
                    const modal = bootstrap.Modal.getInstance(document.getElementById('addMemberModal'));
                    modal.hide();
                    loadMembers(currentPage);
                    alert('会员创建成功！会员编号：' + data.data.member_no);
                } else {
                    alert('创建失败：' + (data.error || '未知错误'));
                }
            } catch (error) {
                console.error('创建会员失败:', error);
                alert('创建会员失败，请稍后重试');
            }
        }
    </script>
