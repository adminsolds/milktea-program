        // 回车键搜索
        document.getElementById('searchInput')?.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                searchMembers();
            }
        });

        // ========== 会员等级管理功能 ==========
        
        // 渲染会员等级列表（用于弹窗内显示）
        function renderMemberLevels() {
            const tbody = document.getElementById('memberLevelTableBody');
            // 如果表格不存在（页面已移除该元素），则直接返回
            if (!tbody) return;
            
            tbody.innerHTML = '';
            
            if (memberLevels.length === 0) {
                tbody.innerHTML = '<tr><td colspan="9" class="text-center">暂无会员等级数据</td></tr>';
                return;
            }
            
            memberLevels.forEach(level => {
                const discountValue = parseFloat(level.discount);
                const discountText = discountValue === 100 ? '无折扣' : `${discountValue.toFixed(0)}折`;
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${level.id}</td>
                    <td>${level.name}</td>
                    <td>${level.level_id}</td>
                    <td>${level.growth_required}</td>
                    <td>${discountText}</td>
                    <td>
                        <span class="color-preview" style="background-color: ${level.color || '#6B7280'}"></span>
                        ${level.color || '#6B7280'}
                    </td>
                    <td>${level.sort_order}</td>
                    <td><span class="badge ${level.is_active ? 'bg-success' : 'bg-danger'}">${level.is_active ? '激活' : '禁用'}</span></td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary" onclick="openEditLevelModal(${level.id})"><i class="bi bi-pencil"></i></button>
                        <button class="btn btn-sm btn-outline-danger ms-1" onclick="deleteMemberLevel(${level.id})"><i class="bi bi-trash"></i></button>
                    </td>
                `;
                tbody.appendChild(row);
            });
        }
        
        // 打开会员等级列表模态框
        function openLevelModal() {
            renderMemberLevelList();
            new bootstrap.Modal(document.getElementById('memberLevelListModal')).show();
        }
        
        // 渲染会员等级列表到弹窗表格
        function renderMemberLevelList() {
            const tbody = document.getElementById('memberLevelListTableBody');
            if (!tbody) return;
            
            tbody.innerHTML = '';
            
            if (memberLevels.length === 0) {
                tbody.innerHTML = '<tr><td colspan="9" class="text-center">暂无会员等级数据</td></tr>';
                return;
            }
            
            memberLevels.forEach(level => {
                const discountValue = parseFloat(level.discount);
                const discountText = discountValue === 100 ? '无折扣' : `${discountValue.toFixed(0)}折`;
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${level.id}</td>
                    <td>${level.name}</td>
                    <td>${level.level_id}</td>
                    <td>${level.growth_required}</td>
