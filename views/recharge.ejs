    <script>
        // 全局变量
        let rechargePlans = [];
        let rechargeRecords = [];
        
        // 初始化页面
        document.addEventListener('DOMContentLoaded', function() {
            loadRechargePlans();
            loadRechargeRecords();
        });
        
        // 加载储值方案列表
        async function loadRechargePlans() {
            try {
                const response = await fetch('/api/recharge/plans');
                const data = await response.json();
                if (data.success) {
                    rechargePlans = data.plans;
                    renderPlans();
                } else {
                    showToast('加载储值方案失败', 'error');
                }
            } catch (error) {
                console.error('加载储值方案失败', error);
                showToast('加载储值方案失败', 'error');
            }
        }
        
        // 渲染储值方案列表
        function renderPlans() {
            const tbody = document.getElementById('plansTableBody');
            tbody.innerHTML = '';
            
            if (rechargePlans.length === 0) {
                tbody.innerHTML = '<tr><td colspan="9" class="text-center">暂无储值方案数据</td></tr>';
                return;
            }
            
            rechargePlans.forEach(plan => {
                const totalAmount = (parseFloat(plan.amount) + parseFloat(plan.bonus_amount)).toFixed(2);
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${plan.id}</td>
                    <td><strong>${plan.name}</strong></td>
                    <td>¥${plan.amount}</td>
                    <td>¥${plan.bonus_amount}</td>
                    <td>${plan.bonus_points}</td>
                    <td>¥${totalAmount}</td>
                    <td><span class="badge bg-secondary">${plan.sort_order}</span></td>
                    <td>
                        <span class="badge ${plan.is_active ? 'bg-success' : 'bg-danger'} status-toggle" onclick="togglePlanStatus(${plan.id})">
                            ${plan.is_active ? '激活' : '禁用'}
                        </span>
                    </td>
                    <td>
                        <div class="btn-group btn-group-sm">
                            <button class="btn btn-outline-primary" onclick="openEditPlanModalById(${plan.id})">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button class="btn btn-outline-${plan.is_active ? 'warning' : 'success'}" onclick="togglePlanStatus(${plan.id})">
                                <i class="bi bi-${plan.is_active ? 'pause' : 'play'}"></i>
                            </button>
                            <button class="btn btn-outline-danger" onclick="deletePlan(${plan.id})">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </td>
                `;
                tbody.appendChild(row);
            });
        }
        
        // 打开添加储值方案模态框
        function openAddPlanModal() {
            document.getElementById('planModalLabel').innerHTML = '<i class="bi bi-plus-circle"></i> 添加储值方案';
            document.getElementById('planForm').reset();
            document.getElementById('planId').value = '';
            new bootstrap.Modal(document.getElementById('planModal')).show();
        }

        // 通过ID打开编辑储值方案模态框
        function openEditPlanModalById(planId) {
            const plan = rechargePlans.find(p => p.id === planId);
            if (plan) {
                openEditPlanModal(plan);
            }
        }

        // 打开编辑储值方案模态框
        function openEditPlanModal(plan) {
            document.getElementById('planModalLabel').innerHTML = '<i class="bi bi-pencil-square"></i> 编辑储值方案';
            document.getElementById('planId').value = plan.id;
            document.getElementById('planName').value = plan.name;
            document.getElementById('planAmount').value = plan.amount;
            document.getElementById('planBonusAmount').value = plan.bonus_amount;
            document.getElementById('planBonusPoints').value = plan.bonus_points;
            document.getElementById('planSortOrder').value = plan.sort_order;
            document.getElementById(plan.is_active ? 'planActive' : 'planInactive').checked = true;
            new bootstrap.Modal(document.getElementById('planModal')).show();
        }
        
        // 保存储值方案
        async function savePlan() {
            const form = document.getElementById('planForm');
            if (!form.checkValidity()) {
                form.reportValidity();
                return;
            }
            
            const planId = document.getElementById('planId').value;
            const planData = {
                name: document.getElementById('planName').value,
                amount: document.getElementById('planAmount').value,
                bonus_amount: document.getElementById('planBonusAmount').value || 0,
                bonus_points: document.getElementById('planBonusPoints').value || 0,
                sort_order: document.getElementById('planSortOrder').value || 0,
                is_active: document.querySelector('input[name="planStatus"]:checked').value
            };
            
            try {
                let response;
                let successMessage;
                if (planId) {
                    response = await fetch(`/api/recharge/plans/${planId}`, {
                        method: 'PUT',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(planData)
                    });
                    successMessage = '储值方案更新成功！';
                } else {
                    response = await fetch('/api/recharge/plans', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(planData)
                    });
                    successMessage = '储值方案添加成功！';
                }
                
                const data = await response.json();
                if (data.success) {
                    bootstrap.Modal.getInstance(document.getElementById('planModal')).hide();
                    loadRechargePlans();
                    showToast(successMessage, 'success');
                } else {
                    showToast(data.error || '操作失败', 'error');
                }
            } catch (error) {
                console.error('保存储值方案失败', error);
                showToast('保存储值方案失败', 'error');
            }
        }
        
        // 切换储值方案状态
        async function togglePlanStatus(planId) {
            const plan = rechargePlans.find(p => p.id === planId);
            if (!plan) return;
            
            const newStatus = plan.is_active === 1 ? 0 : 1;
            const actionText = newStatus ? '激活' : '禁用';
            
            if (!confirm(`确定要${actionText}该储值方案吗？`)) {
                return;
            }
            
            try {
                const response = await fetch(`/api/recharge/plans/${planId}/toggle`, {
                    method: 'PATCH'
                });
                
                const data = await response.json();
                if (data.success) {
                    loadRechargePlans();
                    showToast(`储值方案已${actionText}`, 'success');
                } else {
                    showToast(data.error || '操作失败', 'error');
                }
            } catch (error) {
                console.error('切换储值方案状态失败', error);
                showToast('切换储值方案状态失败', 'error');
            }
        }
        
        // 删除储值方案
        async function deletePlan(planId) {
            if (!confirm('确定要删除该储值方案吗？')) {
                return;
            }
            
            try {
                const response = await fetch(`/api/recharge/plans/${planId}`, {
                    method: 'DELETE'
                });
                
                const data = await response.json();
                if (data.success) {
                    loadRechargePlans();
                    showToast('储值方案删除成功', 'success');
                } else {
                    showToast(data.error || '删除失败', 'error');
                }
            } catch (error) {
                console.error('删除储值方案失败', error);
                showToast('删除储值方案失败', 'error');
            }
        }
        
        // 加载储值记录列表
        async function loadRechargeRecords() {
            try {
                const response = await fetch('/api/recharge/records');
                const data = await response.json();
                if (data.success) {
                    rechargeRecords = data.records;
                    renderRecords();
                } else {
                    showToast('加载储值记录失败', 'error');
                }
            } catch (error) {
                console.error('加载储值记录失败', error);
                showToast('加载储值记录失败', 'error');
            }
        }
        
        // 渲染储值记录列表
        function renderRecords() {
            const tbody = document.getElementById('recordsTableBody');
            tbody.innerHTML = '';
            
            if (rechargeRecords.length === 0) {
                tbody.innerHTML = '<tr><td colspan="9" class="text-center">暂无储值记录数据</td></tr>';
                return;
            }
            
            rechargeRecords.forEach(record => {
                const rechargeTypeText = {
                    'wxpay': '微信支付',
                    'alipay': '支付宝',
                    'admin': '管理员操作'
                }[record.recharge_type] || record.recharge_type;
                
                const statusText = {
                    'pending': '<span class="text-warning">待处理</span>',
                    'completed': '<span class="text-success">已完成</span>',
                    'failed': '<span class="text-danger">失败</span>'
                }[record.status] || record.status;
                
                const createdTime = new Date(record.created_at).toLocaleString('zh-CN');
                
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${record.id}</td>
                    <td>
                        <div>
                            <strong>ID: ${record.user_id}</strong><br>
                            <small>${record.user?.nickname || '未知用户'}</small><br>
                            <small>${record.user?.phone || ''}</small>
                        </div>
                    </td>
                    <td>¥${record.amount}</td>
                    <td>¥${record.bonus_amount}</td>
                    <td>¥${record.total_amount}</td>
                    <td>${rechargeTypeText}</td>
                    <td>${statusText}</td>
                    <td>${record.remark || '-'}</td>
                    <td>${createdTime}</td>
                `;
                tbody.appendChild(row);
            });
        }
        
        // 打开管理员手动储值模态框
        function openAdminRechargeModal() {
            document.getElementById('adminRechargeForm').reset();
            new bootstrap.Modal(document.getElementById('adminRechargeModal')).show();
        }
        
        // 保存管理员手动储值
        async function saveAdminRecharge() {
            const form = document.getElementById('adminRechargeForm');
            if (!form.checkValidity()) {
                form.reportValidity();
                return;
            }
            
            const rechargeData = {
                user_id: document.getElementById('userId').value,
                amount: document.getElementById('rechargeAmount').value,
                bonus_amount: document.getElementById('bonusAmount').value || 0,
                remark: document.getElementById('rechargeRemark').value
            };
            
            try {
                const response = await fetch('/api/recharge/admin-recharge', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(rechargeData)
                });
                
                const data = await response.json();
                if (data.success) {
                    bootstrap.Modal.getInstance(document.getElementById('adminRechargeModal')).hide();
                    loadRechargeRecords();
                    showToast('储值成功', 'success');
                } else {
                    showToast(data.error || '储值失败', 'error');
                }
            } catch (error) {
                console.error('管理员储值失败', error);
                showToast('管理员储值失败', 'error');
            }
        }

        // ========== 自定义储值功能 ==========

        // 存储查询到的用户信息
        let currentUserInfo = null;

        // 打开自定义储值模态框
        function openCustomRechargeModal() {
            document.getElementById('customRechargeForm').reset();
            document.getElementById('userInfoDisplay').style.display = 'none';
            document.getElementById('directSetPointsSection').style.display = 'none';
            document.getElementById('customRechargePreview').style.display = 'none';
            document.getElementById('directSetPointsToggle').checked = false;
            currentUserInfo = null;
            new bootstrap.Modal(document.getElementById('customRechargeModal')).show();
        }

        // 根据用户ID查询用户信息
        async function searchUserById() {
            const userId = document.getElementById('customUserId').value;
            if (!userId) {
                showToast('请输入用户ID', 'error');
                return;
            }

            try {
                const response = await fetch(`/api/users/${userId}`);
                const data = await response.json();

                if (data.success && data.user) {
                    currentUserInfo = data.user;
                    displayUserInfo(data.user);
                    updatePreview();
                } else {
                    showToast('用户不存在', 'error');
                    document.getElementById('userInfoDisplay').style.display = 'none';
                    currentUserInfo = null;
                }
            } catch (error) {
                console.error('查询用户失败', error);
                showToast('查询用户失败', 'error');
            }
        }

        // 显示用户信息
        function displayUserInfo(user) {
            document.getElementById('userInfoNickname').textContent = user.nickName || user.nickname || '-';
            document.getElementById('userInfoLevel').textContent = user.level || user.member_level || '-';
            document.getElementById('userInfoBalance').textContent = `¥${user.balance || '0.00'}`;
            document.getElementById('userInfoPoints').textContent = user.points || 0;
            document.getElementById('userInfoGrowth').textContent = user.growth_value || 0;
            document.getElementById('userInfoPhone').textContent = user.phone || '-';
            document.getElementById('userInfoDisplay').style.display = 'block';
        }

        // 设置快捷金额
        function setCustomAmount(amount) {
            document.getElementById('customRechargeAmount').value = amount;
            updatePreview();
        }

        // 切换直接设置积分开关
        function toggleDirectSetPoints() {
            const toggle = document.getElementById('directSetPointsToggle').checked;
            const section = document.getElementById('directSetPointsSection');

            if (toggle) {
                section.style.display = 'block';
                // 如果有用户信息，预设当前值
                if (currentUserInfo) {
                    document.getElementById('directSetPoints').value = currentUserInfo.points || 0;
                    document.getElementById('directSetGrowth').value = currentUserInfo.growth_value || 0;
                }
            } else {
                section.style.display = 'none';
            }
            updatePreview();
        }

        // 更新预计结果
        function updatePreview() {
            const previewDiv = document.getElementById('customRechargePreview');
            const isDirectSet = document.getElementById('directSetPointsToggle').checked;
            const amount = parseFloat(document.getElementById('customRechargeAmount').value) || 0;
            const bonusAmount = parseFloat(document.getElementById('customBonusAmount').value) || 0;

            if (!currentUserInfo) {
                previewDiv.style.display = 'none';
                return;
            }

            previewDiv.style.display = 'block';

            if (isDirectSet) {
                // 直接设置模式
                const newPoints = parseInt(document.getElementById('directSetPoints').value) || 0;
                const newGrowth = parseInt(document.getElementById('directSetGrowth').value) || 0;

                const pointsDiff = newPoints - (currentUserInfo.points || 0);
                const growthDiff = newGrowth - (currentUserInfo.growth_value || 0);

                document.getElementById('previewBalance').textContent = `¥${(amount + bonusAmount).toFixed(2)}`;
                document.getElementById('previewPoints').textContent = pointsDiff > 0 ? `+${pointsDiff}` : pointsDiff;
                document.getElementById('previewGrowth').textContent = growthDiff > 0 ? `+${growthDiff}` : growthDiff;
            } else {
                // 正常充值模式
                document.getElementById('previewBalance').textContent = `¥${(amount + bonusAmount).toFixed(2)}`;
                document.getElementById('previewPoints').textContent = `+${Math.floor(amount)}`;
                document.getElementById('previewGrowth').textContent = `+${Math.floor(amount)}`;
            }
        }

        // 监听输入变化，自动更新预览
        document.addEventListener('DOMContentLoaded', function() {
            const inputs = ['customRechargeAmount', 'customBonusAmount', 'directSetPoints', 'directSetGrowth'];
            inputs.forEach(id => {
                const element = document.getElementById(id);
                if (element) {
                    element.addEventListener('input', updatePreview);
                }
            });

            // 监听用户ID输入框变化
            const userIdInput = document.getElementById('customUserId');
            if (userIdInput) {
                let debounceTimer;
                userIdInput.addEventListener('input', function() {
                    clearTimeout(debounceTimer);
                    debounceTimer = setTimeout(() => {
                        if (this.value) {
                            searchUserById();
                        }
                    }, 500);
                });
            }
        });

        // 保存自定义储值
        async function saveCustomRecharge() {
            const form = document.getElementById('customRechargeForm');
            if (!form.checkValidity()) {
                form.reportValidity();
                return;
            }

            const userId = document.getElementById('customUserId').value;
            if (!currentUserInfo) {
                showToast('请先查询用户信息', 'error');
                return;
            }

            const isDirectSet = document.getElementById('directSetPointsToggle').checked;
            const amount = parseFloat(document.getElementById('customRechargeAmount').value) || 0;
            const bonusAmount = parseFloat(document.getElementById('customBonusAmount').value) || 0;
            const rechargeType = document.getElementById('customRechargeType').value;
            const remark = document.getElementById('customRechargeRemark').value;

            if (amount <= 0 && !isDirectSet) {
                showToast('储值金额必须大于0', 'error');
                return;
            }

            // 确认提示
            let confirmMessage = `确认为用户 ${currentUserInfo.nickName || currentUserInfo.nickname} 进行自定义储值吗？\n\n`;
            if (isDirectSet) {
                const newPoints = parseInt(document.getElementById('directSetPoints').value) || 0;
                const newGrowth = parseInt(document.getElementById('directSetGrowth').value) || 0;
                confirmMessage += `将直接设置:\n积分: ${currentUserInfo.points} → ${newPoints}\n成长值: ${currentUserInfo.growth_value} → ${newGrowth}`;
            } else {
                confirmMessage += `储值金额: ¥${amount.toFixed(2)}\n赠送金额: ¥${bonusAmount.toFixed(2)}\n获得积分: +${Math.floor(amount)}\n增加成长值: +${Math.floor(amount)}`;
            }

            if (!confirm(confirmMessage)) {
                return;
            }

            const rechargeData = {
                user_id: userId,
                amount: amount,
                bonus_amount: bonusAmount,
                remark: `[${rechargeType}] ${remark}`.trim(),
                recharge_type: rechargeType
            };

            // 如果是直接设置模式，添加额外参数
            if (isDirectSet) {
                rechargeData.direct_set_points = parseInt(document.getElementById('directSetPoints').value) || 0;
                rechargeData.direct_set_growth = parseInt(document.getElementById('directSetGrowth').value) || 0;
            }

            try {
                const response = await fetch('/api/recharge/custom-recharge', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(rechargeData)
                });

                const data = await response.json();
                if (data.success) {
                    bootstrap.Modal.getInstance(document.getElementById('customRechargeModal')).hide();
                    loadRechargeRecords();
                    showToast(`自定义储值成功！${data.message || ''}`, 'success');
                } else {
                    showToast(data.error || '储值失败', 'error');
                }
            } catch (error) {
                console.error('自定义储值失败', error);
                showToast('自定义储值失败', 'error');
            }
        }

        // 显示提示消息
        function showToast(message, type = 'info') {
            const toast = document.createElement('div');
            toast.className = `alert alert-${type === 'error' ? 'danger' : type} position-fixed top-0 end-0 m-3`;
            toast.style.zIndex = '9999';
            toast.innerHTML = `
                <i class="bi bi-${type === 'success' ? 'check-circle' : type === 'error' ? 'x-circle' : 'info-circle'}"></i>
                ${message}
            `;
            document.body.appendChild(toast);
            setTimeout(() => toast.remove(), 3000);
        }
    </script>
</body>
