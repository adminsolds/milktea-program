<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>奶茶店后台管理系统- 系统配置</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles/admin-modern.css">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .sidebar {
            min-height: 100vh;
            background-color: #343a40;
            color: white;
        }
        .sidebar a {
            color: white;
            text-decoration: none;
        }
        .sidebar a:hover {
            background-color: #495057;
        }
        .content {
            padding: 20px;
        }
        .card {
            margin-bottom: 20px;
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }
        .config-section {
            margin-bottom: 30px;
        }
        .config-section-title {
            font-size: 1.2rem;
            font-weight: 600;
            margin-bottom: 20px;
            color: #495057;
            border-bottom: 2px solid #dee2e6;
            padding-bottom: 10px;
        }
        .config-item {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 15px;
            border: 1px solid #e9ecef;
        }
        .config-item:hover {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            transition: box-shadow 0.3s;
        }
        .config-label {
            font-weight: 600;
            color: #495057;
            margin-bottom: 5px;
        }
        .config-description {
            color: #6c757d;
            font-size: 0.9rem;
            margin-bottom: 10px;
        }
        .rate-input-group {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .rate-input-group input {
            max-width: 150px;
        }
        .rate-input-group .input-group-text {
            background-color: #e9ecef;
        }
        .save-btn {
            background-color: #0d6efd;
            border: none;
        }
        .save-btn:hover {
            background-color: #0b5ed7;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- 侧边栏-->
            <div class="col-md-2 sidebar">
                <div class="p-3 bg-dark text-center">
                    <h5>奶茶店管理系统/h5>
                </div>
                <ul class="nav flex-column p-3">
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/dashboard">
                            <i class="bi bi-house"></i> 首页
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/pos">
                            <i class="bi bi-shop"></i> 现场点单
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/products">
                            <i class="bi bi-box"></i> 商品管理
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/orders">
                            <i class="bi bi-phone"></i> 小程序订单
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/all-orders">
                            <i class="bi bi-cart"></i> 订单管理
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/users">
                            <i class="bi bi-people-fill"></i> 用户管理
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/members">
                            <i class="bi bi-crown"></i> 会员管理
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/admin/system-config">
                            <i class="bi bi-gear"></i> 系统配置
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/recharge">
                            <i class="bi bi-wallet2"></i> 储值管理
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/stores">
                            <i class="bi bi-building"></i> 店铺管理
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/group-buy">
                            <i class="bi bi-people-fill"></i> 团购管理
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/ui">
                            <i class="bi bi-palette-fill"></i> UI管理
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/delivery-platforms">
                            <i class="bi bi-truck"></i> 外卖平台
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/coupons">
                            <i class="bi bi-ticket"></i> 优惠券管理
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/stats">
                            <i class="bi bi-graph"></i> 数据统计
                        </a>
                    </li>
                    <li class="nav-item mt-3">
                        <a class="nav-link" href="/admin/logout">
                            <i class="bi bi-box-arrow-right"></i> 退出登录
                        </a>
                    </li>
                </ul>
            </div>

            <!-- 主内容区 -->
            <div class="col-md-10 content">
                <!-- 顶部导航栏 -->
                <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm mb-4">
                    <div class="container-fluid d-flex justify-content-between align-items-center">
                        <h4 class="mb-0"><i class="bi bi-gear"></i> 系统配置</h4>
                        <span class="text-muted">欢迎，<strong>admin</strong></span>
                    </div>
                </nav>

                <!-- 会员成长值配置-->
                <div class="config-section">
                    <div class="config-section-title">
                        <i class="bi bi-graph-up-arrow"></i> 会员成长值配置
                    </div>

                    <div class="config-item">
                        <div class="config-label">成长值转换比例/div>
                        <div class="config-description">消费1元获得的成长值数量/div>
                        <div class="rate-input-group">
                            <span class="input-group-text">消费</span>
                            <input type="number" class="form-control" id="growth-rate" value="1" min="0" step="0.1">
                            <span class="input-group-text">1元 = 1 成长值/span>
                        </div>
                    </div>

                    <div class="config-item">
                        <div class="config-label">积分转换比例</div>
                        <div class="config-description">消费1元获得的积分数量</div>
                        <div class="rate-input-group">
                            <span class="input-group-text">消费</span>
                            <input type="number" class="form-control" id="points-rate" value="1" min="0" step="0.1">
                            <span class="input-group-text">1元 = 1 积分</span>
                        </div>
                    </div>

                    <div class="config-item">
                        <div class="config-label">新人入会赠送成长值/div>
                        <div class="config-description">新用户注册成为会员时赠送的成长值数量/div>
                        <div class="rate-input-group">
                            <span class="input-group-text">赠送/span>
                            <input type="number" class="form-control" id="new-member-growth" value="100" min="0">
                            <span class="input-group-text">成长值/span>
                        </div>
                    </div>
                </div>

                <!-- 说明卡片 -->
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><i class="bi bi-info-circle"></i> 配置说明</h5>
                        <ul class="card-text">
                            <li><strong>成长值转换比例/strong>:控制用户消费金额转换为成长值的比例。例如设置为1,则消费1元获得1成长值；设置为0.5,则消费1元获得0.5成长值长值�?/li>
                            <li><strong>积分转换比例</strong>:控制用户消费金额转换为积分的比例。例如设置为1,则消费1元获得1积分。/li>
                            <li><strong>新人入会赠送成长值/strong>:新用户注册成为会员时自动赠送的成长值数量。/li>
                            <li><strong>成长值阈值/strong>:请在"会员等级"页面配置各等级所需的成长值。/li>
                        </ul>
                    </div>
                </div>

                <!-- 保存按钮 -->
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button class="btn btn-primary btn-lg save-btn" onclick="saveConfigs()">
                        <i class="bi bi-save"></i> 保存配置
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
        const API_BASE = '/api/system-configs'

        // 获取token
        function getToken() {
            return localStorage.getItem('adminToken')
        }

        // 设置axios默认请求头
        axios.defaults.headers.common['Authorization'] = `Bearer ${getToken()}`

        // 加载配置
        async function loadConfigs() {
            try {
                const response = await axios.get(`${API_BASE}`)
                if (response.data.success) {
                    const configs = response.data.data

                    // 填充表单
                    configs.forEach(config => {
                        if (config.key === 'growth_rate') {
                            document.getElementById('growth-rate').value = config.value.rate
                        } else if (config.key === 'points_rate') {
                            document.getElementById('points-rate').value = config.value.rate
                        } else if (config.key === 'new_member_growth') {
                            document.getElementById('new-member-growth').value = config.value.amount
                        }
                    })
                }
            } catch (error) {
                console.error('加载配置失败:', error)
                if (error.response && error.response.status === 401) {
                    alert('登录已过期，请重新登录！)
                    window.location.href = '/admin/login'
                }
            }
        }

        // 保存配置
        async function saveConfigs() {
            try {
                const growthRate = parseFloat(document.getElementById('growth-rate').value)
                const pointsRate = parseFloat(document.getElementById('points-rate').value)
                const newMemberGrowth = parseInt(document.getElementById('new-member-growth').value)

                if (growthRate < 0 || pointsRate < 0 || newMemberGrowth < 0) {
                    alert('配置值不能为负数')
                    return
                }

                const configs = [
                    {
                        key: 'growth_rate',
                        value: { rate: growthRate }
                    },
                    {
                        key: 'points_rate',
                        value: { rate: pointsRate }
                    },
                    {
                        key: 'new_member_growth',
                        value: { amount: newMemberGrowth }
                    }
                ]

                const response = await axios.put(`${API_BASE}/batch/update`, { configs })

                if (response.data.success) {
                    alert('配置保存成功!')
                } else {
                    alert('配置保存失败: ' + response.data.message)
                }
            } catch (error) {
                console.error('保存配置失败:', error)
                alert('保存配置失败: ' + (error.response?.data?.message || error.message))
            }
        }

        // 页面加载时获取配置
        document.addEventListener('DOMContentLoaded', loadConfigs)
    </script>
</body>
</html>
