                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" href="/admin/logout">
                            <i class="bi bi-box-arrow-right"></i> 退出登录
                        </a>
                    </li>
                </ul>
            </div>
            
            <!-- 主内容区 -->
            <div class="col-md-10 content">
                <!-- 顶部导航栏 -->
                <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm mb-4">
                    <div class="container-fluid d-flex justify-content-between align-items-center">
                        <h4 class="mb-0"><i class="bi bi-crown"></i> 会员等级</h4>
                        <span class="text-muted">欢迎，<strong>admin</strong></span>
                    </div>
                </nav>
                
                <!-- 会员管理页面 -->
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">会员等级管理</h5>
                        <button class="btn btn-primary" onclick="openAddModal()">
                            <i class="bi bi-plus"></i> 添加会员等级
                        </button>
                    </div>
                    <div class="card-body">
                        <!-- 会员等级列表 -->
                        <div class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>等级名称</th>
                                        <th>等级标识</th>
                                        <th>成长值</th>
                                        <th>折扣</th>
                                        <th>颜色</th>
                                        <th>排序</th>
                                        <th>状态</th>
                                        <th>操作</th>
                                    </tr>
                                </thead>
                                <tbody id="memberLevelTableBody">
                                    <!-- 会员等级数据将通过JS动态加载 -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- 添加/编辑会员等级模态框 -->
    <div class="modal fade" id="memberLevelModal" tabindex="-1" aria-labelledby="memberLevelModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="memberLevelModalLabel">添加会员等级</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="memberLevelForm">
                        <input type="hidden" id="memberLevelId">
                        
                        <div class="mb-3">
                            <label for="memberLevelName" class="form-label">等级名称</label>
                            <input type="text" class="form-control" id="memberLevelName" required>
                        </div>
                        <div class="mb-3">
                            <label for="memberLevelIdInput" class="form-label">等级标识</label>
                            <input type="text" class="form-control" id="memberLevelIdInput" required placeholder="如：普通会员 银卡, 金卡">
                        </div>
                        <div class="mb-3">
                            <label for="growthRequired" class="form-label">成长值</label>
                            <input type="number" class="form-control" id="growthRequired" min="0" required placeholder="升级到该等级所需的成长值">
                        </div>
                        <div class="mb-3">
                            <label for="discount" class="form-label">折扣</label>
                            <input type="number" class="form-control" id="discount" step="0.01" min="0" max="100" placeholder="95表示95折">
                        </div>
                        <div class="mb-3">
                            <label for="levelColor" class="form-label">颜色</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="levelColor" placeholder="如：#6B7280">
                                <input type="color" class="form-control form-control-color" id="colorPicker" value="#6B7280" title="选择颜色">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="sortOrder" class="form-label">排序</label>
                            <input type="number" class="form-control" id="sortOrder" min="0" value="0">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">状态</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="levelStatus" id="levelActive" value="1" checked>
                                <label class="form-check-label" for="levelActive">激活</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="levelStatus" id="levelInactive" value="0">
                                <label class="form-check-label" for="levelInactive">禁用</label>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                    <button type="button" class="btn btn-primary" onclick="saveMemberLevel()">保存</button>
                </div>
            </div>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // 全局变量
        let memberLevels = [];

        // 初始化页面
        document.addEventListener('DOMContentLoaded', function() {
            loadMemberLevels();

            // 颜色选择器联动
            document.getElementById('colorPicker').addEventListener('input', function() {
                document.getElementById('levelColor').value = this.value;
            });

            document.getElementById('levelColor').addEventListener('input', function() {
                document.getElementById('colorPicker').value = this.value;
            });
        });
        
        // 加载会员等级列表
        async function loadMemberLevels() {
            try {
                const response = await fetch('/api/member-levels');
                memberLevels = await response.json();
                renderMemberLevels();
            } catch (error) {
                console.error('加载会员等级失败:', error);
                alert('加载会员等级失败，请稍后重试');
            }
        }
        
        // 渲染会员等级列表
        function renderMemberLevels() {
            const tbody = document.getElementById('memberLevelTableBody');
            tbody.innerHTML = '';
            
            if (memberLevels.length === 0) {
                tbody.innerHTML = '<tr><td colspan="9" class="text-center">暂无会员等级数据</td></tr>';
                return;
            }
            
            memberLevels.forEach(level => {
                const discountValue = parseFloat(level.discount);
                const discountText = discountValue === 100 ? '无折扣' : `${discountValue.toFixed(0)}折`;
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${level.id}</td>
                    <td>${level.name}</td>
                    <td>${level.level_id}</td>
                    <td>${level.growth_required}</td>
                    <td>${discountText}</td>
                    <td>
                        <span class="color-preview" style="background-color: ${level.color || '#6B7280'}"></span>
                        ${level.color || '#6B7280'}
                    </td>
                    <td>${level.sort_order}</td>
                    <td><span class="badge ${level.is_active ? 'bg-success' : 'bg-danger'}">${level.is_active ? '激活' : '禁用'}</span></td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary" onclick="openEditModalById(${level.id})"><i class="bi bi-pencil"></i></button>
                        <button class="btn btn-sm btn-outline-danger ms-1" onclick="deleteMemberLevel(${level.id})"><i class="bi bi-trash"></i></button>
                    </td>
                `;
                tbody.appendChild(row);
            });
        }
        
        // 打开添加会员等级模态框
        function openAddModal() {
            document.getElementById('memberLevelModalLabel').textContent = '添加会员等级';
            document.getElementById('memberLevelForm').reset();
            document.getElementById('memberLevelId').value = '';
            document.getElementById('colorPicker').value = '#6B7280';
            document.getElementById('levelColor').value = '#6B7280';
            new bootstrap.Modal(document.getElementById('memberLevelModal')).show();
        }
        
        // 打开编辑会员等级模态框
        function openEditModal(level) {
            document.getElementById('memberLevelModalLabel').textContent = '编辑会员等级';
            document.getElementById('memberLevelId').value = level.id;
            document.getElementById('memberLevelName').value = level.name;
            document.getElementById('memberLevelIdInput').value = level.level_id;
            document.getElementById('growthRequired').value = level.growth_required;
            document.getElementById('discount').value = level.discount;
            document.getElementById('levelColor').value = level.color || '#6B7280';
            document.getElementById('colorPicker').value = level.color || '#6B7280';
            document.getElementById('sortOrder').value = level.sort_order || 0;
            document.getElementById(level.is_active ? 'levelActive' : 'levelInactive').checked = true;
            new bootstrap.Modal(document.getElementById('memberLevelModal')).show();
        }

        // 通过ID打开编辑会员等级模态框
        function openEditModalById(levelId) {
            const level = memberLevels.find(l => l.id === levelId);
            if (level) {
                openEditModal(level);
            }
        }
        
        // 保存会员等级
        async function saveMemberLevel() {
            const form = document.getElementById('memberLevelForm');
            if (!form.checkValidity()) {
                form.reportValidity();
                return;
            }
            
            const levelId = document.getElementById('memberLevelId').value;
            const levelData = {
                name: document.getElementById('memberLevelName').value,
                level_id: document.getElementById('memberLevelIdInput').value,
                growth_required: parseInt(document.getElementById('growthRequired').value),
                discount: parseFloat(document.getElementById('discount').value) || 0.00,
                color: document.getElementById('levelColor').value,
                sort_order: parseInt(document.getElementById('sortOrder').value) || 0,
                is_active: document.querySelector('input[name="levelStatus"]:checked').value
            };
            
            try {
                let response;
                if (levelId) {
                    // 更新会员等级
                    response = await fetch(`/api/member-levels/${levelId}`, {
                        method: 'PUT',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(levelData)
                    });
                } else {
                    // 添加会员等级
                    response = await fetch('/api/member-levels', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(levelData)
                    });
                }
                
                if (response.ok) {
                    // 关闭模态框
                    bootstrap.Modal.getInstance(document.getElementById('memberLevelModal')).hide();
                    // 重新加载会员等级列表
                    loadMemberLevels();
                    alert('会员等级保存成功！');
                } else {
                    const errorData = await response.json();
                    alert('保存失败：' + (errorData.error || '未知错误'));
                }
            } catch (error) {
                console.error('保存会员等级失败:', error);
                alert('保存会员等级失败，请稍后重试');
            }
        }
        
        // 删除会员等级
        async function deleteMemberLevel(levelId) {
            if (!confirm('确定要删除该会员等级吗？')) {
                return;
            }
            
            try {
                const response = await fetch(`/api/member-levels/${levelId}`, {
                    method: 'DELETE'
                });
                
                if (response.ok) {
                    // 重新加载会员等级列表
                    loadMemberLevels();
                    alert('会员等级删除成功！');
                } else {
                    const errorData = await response.json();
                    alert('删除失败：' + (errorData.error || '未知错误'));
                }
            } catch (error) {
                console.error('删除会员等级失败:', error);
                alert('删除会员等级失败，请稍后重试');
            }
        }
    </script>
</body>
