# 微信小程序配置
WECHAT_APPID=your_appid_here

# 微信支付配置
WECHAT_MCH_ID=your_mch_id_here
WECHAT_API_KEY=your_api_key_here
WECHAT_API_V3_KEY=your_api_v3_key_here
WECHAT_CERT_SERIAL_NO=your_serial_no_here

# 证书文件路径（绝对路径）
WECHAT_CERT_PATH=/path/to/apiclient_cert.pem
WECHAT_CERT_KEY_PATH=/path/to/apiclient_key.pem

# 支付通知地址（需要是HTTPS地址）
WECHAT_NOTIFY_URL=https://yourdomain.com/api/payment/wechat/notify
WECHAT_REFUND_NOTIFY_URL=https://yourdomain.com/api/payment/wechat/refund-notify

# 是否使用沙箱环境（测试时设为 true）
WECHAT_SANDBOX=false
